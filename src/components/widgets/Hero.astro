<section>
  <div class="mx-auto max-w-screen-xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2 lg:gap-16">
      <div
        class="relative h-64 overflow-hidden rounded-lg sm:h-80 lg:order-last lg:h-full"
      >
			<div class=" flex splide" role="group" aria-label="Splide Basic HTML Example">
				<div class="splide__track">
					<ul class="splide__list">
						<img src="../../assets/images/astronaut.jpg" class="splide__slide"/>
						<img src="../../assets/images/hero.jpg" class="splide__slide"/>
						<img src="../../assets/images/steps.jpg" class="splide__slide"/>
					</ul>
				</div>
			</div>
      </div>

      <div class="lg:py-24">
        <h2 class="text-3xl font-bold sm:text-4xl uppercase">Welcome ! </h2> <span class="text-2xl sm:text-3xl">to the most cool community in Denmark.</span>  

        <p class="mt-4 text-2xl dark:text-white text-gray-600">
          ENRICH AND CHERISH THE CULTURE OF YOUR HOMELAND. 
        </p>

        <a
          href="#"
          class="mt-8 inline-flex items-center rounded border border-indigo-600 bg-indigo-600 px-8 py-3 text-white hover:bg-transparent hover:text-indigo-600 focus:outline-none focus:ring active:text-indigo-500"
        >
          <span class="text-sm font-medium"> Register Now </span>

          <svg
            class="ml-3 h-5 w-5"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M17 8l4 4m0 0l-4 4m4-4H3"
            />
          </svg>
        </a>
      </div>
    </div>
  </div>
</section>

<script is:inline src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.3/dist/js/splide.min.js"> 
</script>
<script is:inline >new Splide( '.splide' ).mount();</script>
